@model MeteoApp.Models.User

@{
    ViewData["Title"] = "Elimina Utente";
}

<h1>Conferma Eliminazione</h1>

<h3>Sei sicuro di voler eliminare questo utente?</h3>
<div>
    <h4>@Model.Nome @Model.Cognome</h4>
    <dl class="row">
        <dt class="col-sm-2">Username</dt>
        <dd class="col-sm-10">@Model.Username</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Elimina" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Annulla</a>
    </form>
</div>
