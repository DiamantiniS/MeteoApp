@model MeteoApp.Models.User

@{
    ViewData["Title"] = "Dettagli Utente";
}

<h1>Dettagli Utente</h1>

<div>
    <h4>Utente</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Nome</dt>
        <dd class="col-sm-10">@Model.Nome</dd>

        <dt class="col-sm-2">Cognome</dt>
        <dd class="col-sm-10">@Model.Cognome</dd>

        <dt class="col-sm-2">Username</dt>
        <dd class="col-sm-10">@Model.Username</dd>

        <dt class="col-sm-2">Password</dt>
        <dd class="col-sm-10">@Model.Password</dd>
    </dl>
</div>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Modifica</a>
<a asp-action="Index" class="btn btn-secondary">Indietro</a>
